@model IT_project_2021.Models.AddToRoleModel

@{
    ViewBag.Title = "AddUserToRole";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddUserToRole</title>
</head>
<body>
    <h2> Add user with this email to a role: </h2>


    @using (Html.BeginForm("AddUserToRole", "Account"))
    {
        <div class="form-group">
            @Html.LabelFor(z => z.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    }

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
